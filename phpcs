#!/bin/bash
set -eu -o pipefail

if [[ $(command -v docker) ]]; then
  docker container run \
    --name phpcs$$ \
    --rm \
    -u "$(id -u):$(id -g)" \
    -v "$PWD":/work:ro \
    docker.io/shakiyam/phpcs "$@"
else
  podman container run \
    --name phpcs$$ \
    --rm \
    --security-opt label=disable \
    -v "$PWD":/work \
    docker.io/shakiyam/phpcs "$@"
fi
