#!/bin/bash
set -eu -o pipefail

if [[ $(command -v docker) ]]; then
  docker container run \
    --name phpcs$$ \
    --rm \
    -u "$(id -u):$(id -g)" \
    -v "$PWD":/work:ro \
    docker.io/shakiyam/phpcs "$@"
elif [[ $(command -v podman) ]]; then
  podman container run \
    --name phpcs$$ \
    --rm \
    --security-opt label=disable \
    -v "$PWD":/work \
    docker.io/shakiyam/phpcs "$@"
else
  echo "Neither docker nor podman is installed."
  exit 1
fi
